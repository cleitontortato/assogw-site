@{
    ViewData["Title"] = "Contato";
}

<div class="container-fluid">
    <div class="row g-0" style="margin-top: 56px;">
        <!-- Left Column: Info Panel -->
        <div class="col-lg-5">
            <div class="contact-panel d-flex flex-column justify-content-center">
                <h1 class="mb-5">Entre em Contato</h1>

                <div class="contact-item d-flex mb-4">
                    <i class="contact-icon fas fa-map-marker-alt me-4"></i>
                    <div>
                        <strong>Endereço</strong>
                        <p class="mb-0">Av. Europa, 68 - Jardim Europa, São Paulo - SP</p>
                    </div>
                </div>

                <div class="contact-item d-flex mb-4">
                    <i class="contact-icon fas fa-phone-alt me-4"></i>
                    <div>
                        <strong>Telefone</strong>
                        <p class="mb-0">(11) 4003-7213</p>
                    </div>
                </div>

                <div class="contact-item d-flex mb-5">
                    <i class="contact-icon fas fa-envelope me-4"></i>
                    <div>
                        <strong>Email</strong>
                        <p class="mb-0">contato@assogw.com.br</p>
                    </div>
                </div>

                <div class="mt-auto">
                    <h5 class="mb-3">Siga-nos</h5>
                    <div class="d-flex">
                        <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Map -->
        <div class="col-lg-7">
            <div class="map-container">
                <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.199509292949!2d-46.68112108502219!3d-23.56133278468303!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce577a4a5bf29d%3A0x8f7f4e8b8c5a4d33!2sAv.%20Europa%2C%2068%20-%20Jardim%20Europa%2C%20São%20Paulo%20-%20SP%2C%2001449-001!5e0!3m2!1spt-BR!2sbr!4v1673721345678!5m2!1spt-BR!2sbr" 
                    width="100%" 
                    height="100%" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy" 
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
</div>
