@model List<assogw.Controllers.PartnerViewModel>

@{
    ViewData["Title"] = "Parceiros";
    var goldPartners = Model.Where(p => p.Category == "Gold").ToList();
    var silverPartners = Model.Where(p => p.Category == "Silver").ToList();
    var bronzePartners = Model.Where(p => p.Category == "Bronze").ToList();
}

<div class="container mx-auto px-4 py-12">
    <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-serif font-bold text-gwm-blue mb-4">Nossos Parceiros</h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">Conhe√ßa as empresas que caminham junto com a ASSOGW para fortalecer a rede GWM no Brasil.</p>
    </div>

    <!-- Gold Section -->
    @if (goldPartners.Any())
    {
        <section class="mb-16">
            <h2 class="text-3xl font-serif font-bold text-gwm-gold mb-8 text-center border-b border-gwm-gold/20 pb-4 inline-block w-full">Patrocinadores Gold</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                @foreach (var partner in goldPartners)
                {
                    <div class="bg-white rounded-xl shadow-lg border-2 border-gwm-gold p-8 flex flex-col items-center justify-center text-center h-full hover:-translate-y-2 transition-transform duration-300">
                         <div class="w-32 h-32 rounded-full bg-white border border-gray-100 shadow-inner flex items-center justify-center mb-6 p-4">
                            <img src="@partner.LogoUrl" alt="@partner.Name" class="max-w-full max-h-full object-contain" />
                        </div>
                        <h3 class="text-xl font-serif font-bold text-gray-800">@partner.Name</h3>
                    </div>
                }
            </div>
        </section>
    }

    <!-- Silver Section -->
    @if (silverPartners.Any())
    {
        <section class="mb-16">
            <h2 class="text-2xl font-serif font-bold text-gray-500 mb-8 text-center border-b border-gray-300 pb-4 inline-block w-full">Patrocinadores Silver</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                @foreach (var partner in silverPartners)
                {
                    <div class="bg-white rounded-xl shadow border-2 border-gray-400 p-6 flex flex-col items-center justify-center text-center h-full hover:-translate-y-1 transition-transform duration-300">
                        <div class="w-24 h-24 rounded-full bg-white border border-gray-100 shadow-inner flex items-center justify-center mb-4 p-3">
                            <img src="@partner.LogoUrl" alt="@partner.Name" class="max-w-full max-h-full object-contain" />
                        </div>
                        <h3 class="text-lg font-serif font-bold text-gray-700">@partner.Name</h3>
                    </div>
                }
            </div>
        </section>
    }

    <!-- Bronze Section -->
    @if (bronzePartners.Any())
    {
        <section>
            <h2 class="text-xl font-serif font-bold text-gwm-bronze mb-8 text-center border-b border-gwm-bronze/20 pb-4 inline-block w-full">Patrocinadores Bronze</h2>
            <div class="grid grid-cols-2 md:grid-cols-6 gap-4">
                @foreach (var partner in bronzePartners)
                {
                    <div class="bg-white rounded-xl shadow-sm border border-gwm-bronze p-4 flex flex-col items-center justify-center text-center h-full hover:shadow-md transition-shadow duration-300">
                        <div class="w-16 h-16 rounded-full bg-white border border-gray-100 shadow-inner flex items-center justify-center mb-3 p-2">
                             <img src="@partner.LogoUrl" alt="@partner.Name" class="max-w-full max-h-full object-contain" />
                        </div>
                        <h3 class="text-base font-serif font-bold text-gray-600">@partner.Name</h3>
                    </div>
                }
            </div>
        </section>
    }
</div>