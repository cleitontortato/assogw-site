@model IEnumerable<assogw.Models.NewsItem>
@using System.Linq

@{
    ViewData["Title"] = "Notícias e Comunicados";
}

<!-- Page Header -->
<section class="pt-32 pb-16 bg-white border-b border-gwm-gray/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <span class="date-badge block mb-4">Editorial</span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif text-gwm-dark">@ViewData["Title"]</h1>
    </div>
</section>

<section class="py-16 bg-gwm-light min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        @if (Model.Any())
        {
            var featured = Model.First();
            var others = Model.Skip(1);

            <!-- Featured Item -->
            <div class="mb-20">
                <a asp-action="Details" asp-route-id="@featured.Id" class="group block">
                    <div class="aspect-21/9 overflow-hidden mb-6">
                        <img src="@featured.ImageUrl" class="w-full h-full object-cover transform group-hover:scale-[1.03] transition-transform duration-700" alt="@featured.Title">
                    </div>
                    <div class="max-w-3xl">
                        <span class="date-badge block mb-3">@featured.PublishDate.ToString("dd MMM, yyyy")</span>
                        <h2 class="text-3xl md:text-4xl font-serif text-gwm-dark group-hover:text-gwm-blue transition-colors mb-4 leading-tight">@featured.Title</h2>
                        <p class="text-gwm-charcoal/60 text-lg line-clamp-2">@featured.Excerpt</p>
                    </div>
                </a>
            </div>

            <!-- News Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var item in others)
                {
                    <a asp-action="Details" asp-route-id="@item.Id" class="group block">
                        <div class="aspect-4/3 overflow-hidden mb-5">
                            <img src="@item.ImageUrl" class="w-full h-full object-cover transform group-hover:scale-[1.03] transition-transform duration-500" alt="@item.Title">
                        </div>
                        <span class="date-badge block mb-3">@item.PublishDate.ToString("dd MMM, yyyy")</span>
                        <h3 class="text-xl font-serif text-gwm-dark group-hover:text-gwm-blue transition-colors line-clamp-2 mb-2">@item.Title</h3>
                        <p class="text-sm text-gwm-charcoal/60 line-clamp-2">@item.Excerpt</p>
                    </a>
                }
            </div>
        }

        <!-- Pagination -->
        <nav aria-label="Paginação" class="mt-20">
            <ul class="flex justify-center items-center space-x-1">
                <li>
                    <a href="#" class="px-4 py-2 text-sm text-gwm-charcoal/40 cursor-not-allowed">Anterior</a>
                </li>
                <li><a href="#" class="px-4 py-2 text-sm text-gwm-dark border-b-2 border-gwm-dark font-medium">1</a></li>
                <li><a href="#" class="px-4 py-2 text-sm text-gwm-charcoal/60 hover:text-gwm-dark transition-colors">2</a></li>
                <li><a href="#" class="px-4 py-2 text-sm text-gwm-charcoal/60 hover:text-gwm-dark transition-colors">3</a></li>
                <li>
                    <a href="#" class="px-4 py-2 text-sm text-gwm-charcoal/60 hover:text-gwm-dark transition-colors">Próxima</a>
                </li>
            </ul>
        </nav>
    </div>
</section>
