@model IEnumerable<assogw.Models.NewsItem>
@using System.Linq

@{
    ViewData["Title"] = "Notícias e Comunicados";
}

<!-- News Hero -->
<section class="pt-32 pb-20 bg-gwm-dark text-center">
    <div class="max-w-7xl mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">@ViewData["Title"]</h1>
        <div class="w-24 h-1 bg-gradient-to-r from-gwm-gold to-gwm-bronze mx-auto"></div>
    </div>
</section>

<section class="py-12 bg-gwm-light min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        @if (Model.Any())
        {
            var featured = Model.First();
            var others = Model.Skip(1);

            <!-- Featured Item -->
            <div class="mb-16">
                <div class="relative h-[500px] rounded-2xl overflow-hidden shadow-2xl group">
                    <img src="@featured.ImageUrl" class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700" alt="@featured.Title">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent flex flex-col justify-end p-8 md:p-12">
                        <span class="bg-gwm-gold text-gwm-dark font-bold px-4 py-1 rounded w-fit mb-4">
                            @featured.PublishDate.ToString("dd MMM, yyyy")
                        </span>
                        <h2 class="text-3xl md:text-5xl font-bold text-white mb-4 leading-tight">@featured.Title</h2>
                        <p class="text-gray-200 text-lg mb-8 max-w-3xl line-clamp-2">@featured.Excerpt</p>
                        <a asp-action="Details" asp-route-id="@featured.Id" class="inline-flex items-center bg-white text-gwm-dark px-8 py-3 rounded font-bold hover:bg-gwm-gold transition-colors w-fit">
                            Ler Matéria Completa
                            <i class="fas fa-arrow-right ml-3"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- News Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var item in others)
                {
                    <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden flex flex-col h-full border border-gray-100 group">
                        <div class="relative h-48 overflow-hidden">
                            <img src="@item.ImageUrl" class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500" alt="@item.Title">
                            <div class="absolute top-4 left-4">
                                <span class="bg-gwm-gold text-gwm-dark text-xs font-bold px-3 py-1 rounded shadow-sm">
                                    @item.PublishDate.ToString("dd MMM, yyyy")
                                </span>
                            </div>
                        </div>
                        <div class="p-6 flex-1 flex flex-col">
                            <h5 class="text-xl font-bold text-gwm-dark mb-3 group-hover:text-gwm-blue transition-colors line-clamp-2">@item.Title</h5>
                            <p class="text-gray-600 mb-6 flex-grow line-clamp-3">@item.Excerpt</p>
                            <a asp-action="Details" asp-route-id="@item.Id" class="inline-flex items-center text-gwm-blue font-bold hover:text-gwm-gold transition-colors mt-auto group/btn">
                                Ler Mais 
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 transform group-hover/btn:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                </svg>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Pagination -->
        <nav aria-label="Page navigation" class="mt-16">
            <ul class="flex justify-center space-x-2">
                <li>
                    <a href="#" class="px-4 py-2 border border-gray-300 rounded text-gray-400 cursor-not-allowed hover:bg-gray-50 transition-colors">Anterior</a>
                </li>
                <li><a href="#" class="px-4 py-2 bg-gwm-blue text-white border border-gwm-blue rounded hover:bg-opacity-90 transition-colors">1</a></li>
                <li><a href="#" class="px-4 py-2 border border-gray-300 text-gwm-dark rounded hover:bg-gray-100 hover:text-gwm-blue transition-colors">2</a></li>
                <li><a href="#" class="px-4 py-2 border border-gray-300 text-gwm-dark rounded hover:bg-gray-100 hover:text-gwm-blue transition-colors">3</a></li>
                <li>
                    <a href="#" class="px-4 py-2 border border-gray-300 text-gwm-dark rounded hover:bg-gray-100 hover:text-gwm-blue transition-colors">Próxima</a>
                </li>
            </ul>
        </nav>
    </div>
</section>