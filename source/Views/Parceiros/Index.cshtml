@model List<assogw.Controllers.PartnerViewModel>

@{
    ViewData["Title"] = "Parceiros";
    var goldPartners = Model.Where(p => p.Category == "Gold").ToList();
    var silverPartners = Model.Where(p => p.Category == "Silver").ToList();
    var bronzePartners = Model.Where(p => p.Category == "Bronze").ToList();
}

<!-- Page Header -->
<section class="pt-32 pb-16 bg-white border-b border-gwm-gray/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <span class="date-badge block mb-4">Rede</span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif text-gwm-dark">Nossos Parceiros</h1>
        <p class="text-lg text-gwm-charcoal/60 max-w-2xl mt-6">Conhe√ßa as empresas que caminham junto com a ASSOGW para fortalecer a rede GWM no Brasil.</p>
    </div>
</section>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 space-y-20">

    <!-- Gold Section -->
    @if (goldPartners.Any())
    {
        <section>
            <div class="flex items-center gap-4 mb-8">
                <div class="w-8 h-px bg-gwm-gold"></div>
                <h2 class="text-xs uppercase tracking-widest text-gwm-gold font-sans font-medium">Gold</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-px bg-gwm-gray/30">
                @foreach (var partner in goldPartners)
                {
                    <a href="@partner.Url" target="_blank" rel="noopener" class="group relative bg-white p-10 flex flex-col items-center justify-center text-center transition-colors duration-300 hover:bg-gwm-light">
                        <div class="absolute top-0 left-0 right-0 h-px bg-gwm-gold/0 group-hover:bg-gwm-gold transition-all duration-300"></div>
                        <div class="w-28 h-28 flex items-center justify-center mb-6">
                            <img src="@partner.LogoUrl" alt="@partner.Name" class="max-w-full max-h-full object-contain grayscale group-hover:grayscale-0 transition-all duration-500" />
                        </div>
                        <h3 class="text-sm font-sans font-medium tracking-wide text-gwm-dark">@partner.Name</h3>
                        <span class="mt-3 text-xs font-sans text-gwm-charcoal/0 group-hover:text-gwm-charcoal/40 tracking-wide transition-colors duration-300">Visitar site &rarr;</span>
                    </a>
                }
            </div>
        </section>
    }

    <!-- Silver Section -->
    @if (silverPartners.Any())
    {
        <section>
            <div class="flex items-center gap-4 mb-8">
                <div class="w-8 h-px bg-gwm-gray"></div>
                <h2 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium">Silver</h2>
            </div>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-px bg-gwm-gray/30">
                @foreach (var partner in silverPartners)
                {
                    <a href="@partner.Url" target="_blank" rel="noopener" class="group relative bg-white p-8 flex flex-col items-center justify-center text-center transition-colors duration-300 hover:bg-gwm-light">
                        <div class="absolute top-0 left-0 right-0 h-px bg-gwm-gray/0 group-hover:bg-gwm-gray transition-all duration-300"></div>
                        <div class="w-20 h-20 flex items-center justify-center mb-5">
                            <img src="@partner.LogoUrl" alt="@partner.Name" class="max-w-full max-h-full object-contain grayscale group-hover:grayscale-0 transition-all duration-500" />
                        </div>
                        <h3 class="text-sm font-sans font-medium tracking-wide text-gwm-dark">@partner.Name</h3>
                    </a>
                }
            </div>
        </section>
    }

    <!-- Bronze Section -->
    @if (bronzePartners.Any())
    {
        <section>
            <div class="flex items-center gap-4 mb-8">
                <div class="w-8 h-px bg-gwm-bronze/40"></div>
                <h2 class="text-xs uppercase tracking-widest text-gwm-charcoal/30 font-sans font-medium">Bronze</h2>
            </div>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-px bg-gwm-gray/20">
                @foreach (var partner in bronzePartners)
                {
                    <a href="@partner.Url" target="_blank" rel="noopener" class="group bg-white p-5 flex flex-col items-center justify-center text-center transition-colors duration-300 hover:bg-gwm-light">
                        <div class="w-14 h-14 flex items-center justify-center mb-3">
                            <img src="@partner.LogoUrl" alt="@partner.Name" class="max-w-full max-h-full object-contain grayscale group-hover:grayscale-0 transition-all duration-500" />
                        </div>
                        <h3 class="text-xs font-sans font-medium tracking-wide text-gwm-charcoal/60">@partner.Name</h3>
                    </a>
                }
            </div>
        </section>
    }
</div>
