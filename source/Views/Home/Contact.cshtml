@{
    ViewData["Title"] = "Contato";
}

<div class="flex flex-col md:flex-row min-h-[calc(100vh-5rem)]">
    <!-- Left Column: Info Panel -->
    <div class="w-full md:w-5/12 bg-gwm-charcoal text-white p-10 lg:p-16 flex flex-col justify-center relative overflow-hidden">
        <div class="relative z-10">
            <span class="date-badge block mb-6 text-white/40!">Fale conosco</span>
            <h1 class="text-3xl md:text-4xl font-serif text-white mb-12">
                Entre em Contato
            </h1>

            <div class="space-y-8 mb-16">
                <div class="flex items-start">
                    <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center mr-5 shrink-0">
                        <i class="fas fa-map-marker-alt text-sm text-white/60"></i>
                    </div>
                    <div>
                        <strong class="block text-sm font-medium text-white mb-1">Endereço</strong>
                        <p class="text-white/50 text-sm leading-relaxed">Av. Europa, 68 - Jardim Europa, <br/>São Paulo - SP</p>
                    </div>
                </div>

                <div class="flex items-start">
                    <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center mr-5 shrink-0">
                        <i class="fas fa-phone-alt text-sm text-white/60"></i>
                    </div>
                    <div>
                        <strong class="block text-sm font-medium text-white mb-1">Telefone</strong>
                        <p class="text-white/50 text-sm">(11) 4003-7213</p>
                    </div>
                </div>

                <div class="flex items-start">
                    <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center mr-5 shrink-0">
                        <i class="fas fa-envelope text-sm text-white/60"></i>
                    </div>
                    <div>
                        <strong class="block text-sm font-medium text-white mb-1">Email</strong>
                        <p class="text-white/50 text-sm">contato@assogw.com.br</p>
                    </div>
                </div>
            </div>

            <div>
                <h5 class="text-xs uppercase tracking-widest text-white/30 mb-5 font-sans font-medium">Siga-nos</h5>
                <div class="flex gap-3">
                    <a href="#" class="w-9 h-9 rounded-full border border-white/20 text-white/50 flex items-center justify-center hover:border-white/50 hover:text-white transition-colors duration-200">
                        <i class="fab fa-linkedin-in text-sm"></i>
                    </a>
                    <a href="#" class="w-9 h-9 rounded-full border border-white/20 text-white/50 flex items-center justify-center hover:border-white/50 hover:text-white transition-colors duration-200">
                        <i class="fab fa-instagram text-sm"></i>
                    </a>
                    <a href="#" class="w-9 h-9 rounded-full border border-white/20 text-white/50 flex items-center justify-center hover:border-white/50 hover:text-white transition-colors duration-200">
                        <i class="fab fa-facebook-f text-sm"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column: Map -->
    <div class="w-full md:w-7/12 h-[50vh] md:h-auto relative bg-gray-200">
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.199509292949!2d-46.68112108502219!3d-23.56133278468303!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce577a4a5bf29d%3A0x8f7f4e8b8c5a4d33!2sAv.%20Europa%2C%2068%20-%20Jardim%20Europa%2C%20São%20Paulo%20-%20SP%2C%2001449-001!5e0!3m2!1spt-BR!2sbr!4v1673721345678!5m2!1spt-BR!2sbr"
            class="w-full h-full grayscale filter"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </div>
</div>
