@model assogw.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="pt-32 pb-24 md:pt-40 md:pb-32 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <span class="date-badge block mb-6">Associação dos Concessionários GWM</span>
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-serif text-gwm-dark leading-[1.05] mb-8 max-w-4xl">
            Unindo forças,<br/> conduzindo o futuro
        </h1>
        <p class="text-lg md:text-xl text-gwm-charcoal/70 max-w-2xl mb-12 leading-relaxed">
            A ASSOGW representa a força e a união da rede de concessionários GWM em busca de inovação e excelência no mercado automotivo brasileiro.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
            <a asp-controller="Home" asp-action="QuemSomos" class="inline-block px-8 py-4 bg-gwm-dark text-white text-sm font-medium tracking-wide hover:bg-gwm-charcoal transition-colors duration-200">
                Saiba Mais
            </a>
            <a asp-controller="Home" asp-action="Contact" class="inline-block px-8 py-4 border border-gwm-charcoal text-gwm-charcoal text-sm font-medium tracking-wide hover:bg-gwm-charcoal hover:text-white transition-colors duration-200">
                Fale Conosco
            </a>
        </div>
    </div>
</section>

<!-- News Section -->
<section class="py-24 bg-gwm-light">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-end justify-between mb-16">
            <h2 class="text-3xl md:text-4xl font-serif text-gwm-dark">Últimas Notícias</h2>
            <a asp-controller="News" asp-action="Index" class="hidden md:inline-flex items-center text-sm font-medium text-gwm-charcoal hover:text-gwm-blue tracking-wide transition-colors">
                Ver todas
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            @foreach (var item in Model.LatestNews)
            {
                <a asp-controller="News" asp-action="Details" asp-route-id="@item.Id" class="group block">
                    <div class="aspect-4/3 overflow-hidden mb-5">
                        <img src="@item.ImageUrl" class="w-full h-full object-cover transform group-hover:scale-[1.03] transition-transform duration-500" alt="@item.Title">
                    </div>
                    <span class="date-badge block mb-3">@item.PublishDate.ToString("dd MMM, yyyy")</span>
                    <h3 class="text-xl font-serif text-gwm-dark group-hover:text-gwm-blue transition-colors line-clamp-2 mb-2">@item.Title</h3>
                    <p class="text-sm text-gwm-charcoal/60 line-clamp-2">@item.Excerpt</p>
                </a>
            }
        </div>

        <div class="mt-12 md:hidden text-center">
            <a asp-controller="News" asp-action="Index" class="inline-flex items-center text-sm font-medium text-gwm-charcoal hover:text-gwm-blue tracking-wide transition-colors">
                Ver todas as notícias
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
            </a>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-px bg-gwm-gray/30">
            <a asp-controller="Parceiros" asp-action="Index" class="group bg-gwm-light hover:bg-white p-12 md:p-16 transition-colors duration-300 block">
                <h3 class="text-2xl md:text-3xl font-serif text-gwm-dark mb-4">Conheça nossos parceiros</h3>
                <p class="text-gwm-charcoal/60 mb-8 max-w-md">Empresas que caminham junto com a ASSOGW para fortalecer a rede GWM no Brasil.</p>
                <span class="inline-flex items-center text-sm font-medium text-gwm-charcoal group-hover:text-gwm-blue tracking-wide transition-colors">
                    Ver Parceiros
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                </span>
            </a>

            <a asp-controller="Concessionarias" asp-action="Index" class="group bg-gwm-light hover:bg-white p-12 md:p-16 transition-colors duration-300 block">
                <h3 class="text-2xl md:text-3xl font-serif text-gwm-dark mb-4">Nossas concessionárias</h3>
                <p class="text-gwm-charcoal/60 mb-8 max-w-md">Encontre a concessionária GWM mais próxima de você em todo o território nacional.</p>
                <span class="inline-flex items-center text-sm font-medium text-gwm-charcoal group-hover:text-gwm-blue tracking-wide transition-colors">
                    Encontrar Concessionária
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                    </svg>
                </span>
            </a>
        </div>
    </div>
</section>

<!-- Partners Strip -->
<section class="py-16 bg-white border-t border-gwm-gray/30">
    <div class="max-w-7xl mx-auto px-4">
        <p class="text-xs uppercase tracking-widest text-gwm-charcoal/40 text-center mb-10 font-medium">Nossos Parceiros</p>
        <div class="flex flex-wrap justify-center items-center gap-12 opacity-40 grayscale">
            <img src="https://via.placeholder.com/150x40/FFFFFF/000000?text=Partner+1" class="h-8 md:h-10 w-auto" alt="Logo Parceiro 1">
            <img src="https://via.placeholder.com/150x40/FFFFFF/000000?text=Partner+2" class="h-8 md:h-10 w-auto" alt="Logo Parceiro 2">
            <img src="https://via.placeholder.com/150x40/FFFFFF/000000?text=Partner+3" class="h-8 md:h-10 w-auto" alt="Logo Parceiro 3">
            <img src="https://via.placeholder.com/150x40/FFFFFF/000000?text=Partner+4" class="h-8 md:h-10 w-auto" alt="Logo Parceiro 4">
            <img src="https://via.placeholder.com/150x40/FFFFFF/000000?text=Partner+5" class="h-8 md:h-10 w-auto" alt="Logo Parceiro 5">
        </div>
    </div>
</section>
