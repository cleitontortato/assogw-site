@{
    ViewData["Title"] = "Design System";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-gwm-light min-h-screen pb-20">
    <!-- Header -->
    <section class="pt-32 pb-16 bg-white border-b border-gwm-gray/30">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <span class="date-badge block mb-4">Reference</span>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif text-gwm-dark mb-4">Design System</h1>
            <p class="text-lg text-gwm-charcoal/60 max-w-2xl">
                A living documentation of ASSOGW's visual identity, including typography, color palettes, and UI components.
            </p>
        </div>
    </section>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 space-y-24">

        <!-- 1. Typography -->
        <section id="typography">
            <div class="flex items-center gap-4 mb-12 border-b border-gwm-gray/30 pb-4">
                <span class="text-4xl text-gwm-charcoal/20 font-serif">01.</span>
                <h2 class="text-3xl font-serif text-gwm-dark">Typography</h2>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Headings -->
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Font Family: Instrument Serif</h3>
                    <div class="space-y-6">
                        <div class="flex items-baseline justify-between border-b border-gwm-gray/20 pb-3">
                            <h1 class="font-serif text-5xl text-gwm-dark">Heading 1</h1>
                            <code class="text-xs text-gwm-charcoal/30 font-mono">text-5xl</code>
                        </div>
                        <div class="flex items-baseline justify-between border-b border-gwm-gray/20 pb-3">
                            <h2 class="font-serif text-4xl text-gwm-dark">Heading 2</h2>
                            <code class="text-xs text-gwm-charcoal/30 font-mono">text-4xl</code>
                        </div>
                        <div class="flex items-baseline justify-between border-b border-gwm-gray/20 pb-3">
                            <h3 class="font-serif text-3xl text-gwm-dark">Heading 3</h3>
                            <code class="text-xs text-gwm-charcoal/30 font-mono">text-3xl</code>
                        </div>
                        <div class="flex items-baseline justify-between border-b border-gwm-gray/20 pb-3">
                            <h4 class="font-serif text-2xl text-gwm-dark">Heading 4</h4>
                            <code class="text-xs text-gwm-charcoal/30 font-mono">text-2xl</code>
                        </div>
                        <div class="flex items-baseline justify-between border-b border-gwm-gray/20 pb-3">
                            <h5 class="font-serif text-xl text-gwm-dark">Heading 5</h5>
                            <code class="text-xs text-gwm-charcoal/30 font-mono">text-xl</code>
                        </div>
                        <div class="flex items-baseline justify-between border-b border-gwm-gray/20 pb-3">
                            <h6 class="font-serif text-lg text-gwm-dark">Heading 6</h6>
                            <code class="text-xs text-gwm-charcoal/30 font-mono">text-lg</code>
                        </div>
                    </div>
                    <p class="text-xs text-gwm-charcoal/30 mt-6">Weight: 400 (normal) &middot; Letter-spacing: -0.01em</p>
                </div>

                <!-- Body -->
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Font Family: Inter (Sans)</h3>
                    <div class="space-y-6">
                        <div>
                            <p class="font-sans text-base leading-relaxed text-gwm-charcoal/80 mb-2">
                                <strong>Body Text (Base):</strong> Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
                            </p>
                            <code class="text-xs text-gwm-charcoal/30 font-mono block">text-base leading-relaxed</code>
                        </div>
                        <div>
                            <p class="font-sans text-sm leading-relaxed text-gwm-charcoal/60 mb-2">
                                <strong>Small Text:</strong> Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
                            </p>
                            <code class="text-xs text-gwm-charcoal/30 font-mono block">text-sm text-gwm-charcoal/60</code>
                        </div>
                        <div>
                            <p class="font-sans text-lg leading-relaxed text-gwm-charcoal mb-2">
                                <strong>Lead Text:</strong> Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore.
                            </p>
                            <code class="text-xs text-gwm-charcoal/30 font-mono block">text-lg text-gwm-charcoal</code>
                        </div>
                        <div>
                            <span class="date-badge">Date Badge Component &middot; 12 Jan, 2026</span>
                            <code class="text-xs text-gwm-charcoal/30 font-mono block mt-2">.date-badge</code>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 2. Color Palette -->
        <section id="colors">
            <div class="flex items-center gap-4 mb-12 border-b border-gwm-gray/30 pb-4">
                <span class="text-4xl text-gwm-charcoal/20 font-serif">02.</span>
                <h2 class="text-3xl font-serif text-gwm-dark">Color Palette</h2>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-4">
                <div class="space-y-2">
                    <div class="aspect-square bg-gwm-blue flex items-end p-3">
                        <span class="text-white text-xs font-mono">gwm-blue</span>
                    </div>
                    <p class="text-xs text-gwm-charcoal/40 font-mono">#00447F</p>
                </div>
                <div class="space-y-2">
                    <div class="aspect-square bg-gwm-dark flex items-end p-3">
                        <span class="text-white text-xs font-mono">gwm-dark</span>
                    </div>
                    <p class="text-xs text-gwm-charcoal/40 font-mono">#0B1A2B</p>
                </div>
                <div class="space-y-2">
                    <div class="aspect-square bg-gwm-gold flex items-end p-3">
                        <span class="text-white text-xs font-mono">gwm-gold</span>
                    </div>
                    <p class="text-xs text-gwm-charcoal/40 font-mono">#C6B18A</p>
                </div>
                <div class="space-y-2">
                    <div class="aspect-square bg-gwm-bronze flex items-end p-3">
                        <span class="text-white text-xs font-mono">gwm-bronze</span>
                    </div>
                    <p class="text-xs text-gwm-charcoal/40 font-mono">#9E8A64</p>
                </div>
                <div class="space-y-2">
                    <div class="aspect-square bg-gwm-electric flex items-end p-3">
                        <span class="text-white text-xs font-mono">gwm-electric</span>
                    </div>
                    <p class="text-xs text-gwm-charcoal/40 font-mono">#0129FF</p>
                </div>
                <div class="space-y-2">
                    <div class="aspect-square bg-gwm-charcoal flex items-end p-3">
                        <span class="text-white text-xs font-mono">gwm-charcoal</span>
                    </div>
                    <p class="text-xs text-gwm-charcoal/40 font-mono">#2E2E2E</p>
                </div>
                <div class="space-y-2">
                    <div class="aspect-square bg-gwm-gray flex items-end p-3 border border-gwm-gray">
                        <span class="text-gwm-charcoal text-xs font-mono">gwm-gray</span>
                    </div>
                    <p class="text-xs text-gwm-charcoal/40 font-mono">#D6D6D6</p>
                </div>
            </div>

            <div class="mt-12">
                <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-6">Neutrals & Backgrounds</h3>
                <div class="grid grid-cols-3 md:grid-cols-6 gap-4">
                    <div class="space-y-2">
                        <div class="aspect-video bg-gwm-light border border-gwm-gray/30"></div>
                        <p class="text-xs text-gwm-charcoal/40 font-mono">gwm-light<br/>#F7F6F3</p>
                    </div>
                    <div class="space-y-2">
                        <div class="aspect-video bg-white border border-gwm-gray/30"></div>
                        <p class="text-xs text-gwm-charcoal/40 font-mono">white</p>
                    </div>
                    <div class="space-y-2">
                        <div class="aspect-video bg-gwm-gray/30 border border-gwm-gray/30"></div>
                        <p class="text-xs text-gwm-charcoal/40 font-mono">gwm-gray/30<br/>Hairline divider</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- 3. Spacing Guidelines -->
        <section id="spacing">
            <div class="flex items-center gap-4 mb-12 border-b border-gwm-gray/30 pb-4">
                <span class="text-4xl text-gwm-charcoal/20 font-serif">03.</span>
                <h2 class="text-3xl font-serif text-gwm-dark">Spacing & Layout</h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-6">Section Spacing</h3>
                    <div class="space-y-4 text-sm">
                        <div class="flex justify-between border-b border-gwm-gray/20 pb-2">
                            <span class="text-gwm-charcoal/70">Section padding</span>
                            <code class="text-gwm-charcoal/40 font-mono">py-24</code>
                        </div>
                        <div class="flex justify-between border-b border-gwm-gray/20 pb-2">
                            <span class="text-gwm-charcoal/70">Page header</span>
                            <code class="text-gwm-charcoal/40 font-mono">pt-32 pb-16</code>
                        </div>
                        <div class="flex justify-between border-b border-gwm-gray/20 pb-2">
                            <span class="text-gwm-charcoal/70">Content max width</span>
                            <code class="text-gwm-charcoal/40 font-mono">max-w-7xl</code>
                        </div>
                        <div class="flex justify-between border-b border-gwm-gray/20 pb-2">
                            <span class="text-gwm-charcoal/70">Article max width</span>
                            <code class="text-gwm-charcoal/40 font-mono">max-w-4xl</code>
                        </div>
                        <div class="flex justify-between border-b border-gwm-gray/20 pb-2">
                            <span class="text-gwm-charcoal/70">Grid gap (cards)</span>
                            <code class="text-gwm-charcoal/40 font-mono">gap-8</code>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gwm-charcoal/70">Hairline gap grid</span>
                            <code class="text-gwm-charcoal/40 font-mono">gap-px bg-gwm-gray/30</code>
                        </div>
                    </div>
                </div>

                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-6">Page Header Pattern</h3>
                    <div class="border border-gwm-gray/20 p-6">
                        <span class="date-badge block mb-3">Eyebrow Label</span>
                        <h1 class="text-3xl font-serif text-gwm-dark">Page Title</h1>
                    </div>
                    <code class="text-xs text-gwm-charcoal/30 font-mono block mt-3">pt-32 pb-16 bg-white border-b border-gwm-gray/30</code>
                </div>
            </div>
        </section>

        <!-- 4. Components -->
        <section id="components">
            <div class="flex items-center gap-4 mb-12 border-b border-gwm-gray/30 pb-4">
                <span class="text-4xl text-gwm-charcoal/20 font-serif">04.</span>
                <h2 class="text-3xl font-serif text-gwm-dark">Components</h2>
            </div>

            <div class="space-y-16">
                <!-- Buttons -->
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Buttons</h3>
                    <div class="flex flex-wrap gap-4 items-center mb-6">
                        <button class="px-8 py-4 bg-gwm-dark text-white text-sm font-medium tracking-wide hover:bg-gwm-charcoal transition-colors">
                            Primary Action
                        </button>
                        <button class="px-8 py-4 border border-gwm-charcoal text-gwm-charcoal text-sm font-medium tracking-wide hover:bg-gwm-charcoal hover:text-white transition-colors">
                            Secondary Action
                        </button>
                        <button class="text-sm font-medium text-gwm-charcoal hover:text-gwm-blue tracking-wide transition-colors inline-flex items-center">
                            Text Link
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                            </svg>
                        </button>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-xs text-gwm-charcoal/30">Disabled:</span>
                        <button class="px-8 py-4 bg-gwm-gray/50 text-gwm-charcoal/30 text-sm font-medium cursor-not-allowed" disabled>
                            Disabled
                        </button>
                    </div>
                    <p class="text-xs text-gwm-charcoal/30 mt-6">No border-radius. No shadows. Flat, restrained, editorial.</p>
                </div>

                <!-- Card Variations -->
                <div>
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Card Variations</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                        <!-- Borderless News Card -->
                        <div class="group">
                            <div class="aspect-4/3 overflow-hidden mb-5 bg-gwm-gray/20">
                                <div class="flex items-center justify-center h-full text-gwm-charcoal/20 group-hover:scale-[1.03] transition-transform duration-500"><i class="fas fa-image text-3xl"></i></div>
                            </div>
                            <span class="date-badge block mb-3">16 Jan, 2026</span>
                            <h3 class="text-3xl font-serif text-gwm-dark group-hover:text-gwm-blue transition-colors line-clamp-2 mb-2">Borderless News Card</h3>
                            <p class="text-sm text-gwm-charcoal/60 line-clamp-2">Image + text stacked. No border, no shadow. Whole card is a link with hover effects.</p>
                            <code class="text-xs text-gwm-charcoal/30 font-mono block mt-3">text-3xl · group-hover:text-gwm-blue · scale on hover</code>
                        </div>

                        <!-- Hairline Grid Cell -->
                        <div class="border border-gwm-gray/30 bg-white p-8 md:p-10">
                            <h3 class="text-xl font-serif text-gwm-dark mb-2">Hairline Grid Cell</h3>
                            <p class="text-sm text-gwm-charcoal/50">City / State</p>
                            <code class="text-xs text-gwm-charcoal/30 font-mono block mt-6">gap-px bg-gwm-gray/30</code>
                        </div>

                        <!-- Partner Card -->
                        <div class="bg-white p-8 flex flex-col items-center justify-center text-center group hover:bg-white transition-colors">
                            <div class="w-24 h-24 flex items-center justify-center mb-6 text-gwm-charcoal/20 grayscale group-hover:grayscale-0 transition-all duration-300">
                                <i class="fas fa-image text-3xl"></i>
                            </div>
                            <h3 class="text-lg font-sans font-medium text-gwm-dark">Partner Card</h3>
                            <p class="text-xs text-gwm-charcoal/40 mt-1">Category</p>
                            <code class="text-xs text-gwm-charcoal/30 font-mono block mt-4">font-sans · grayscale hover · hairline grid</code>
                        </div>
                    </div>
                </div>

                <!-- Hero CTA Button -->
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Hero CTA Buttons</h3>
                    <div class="flex flex-wrap gap-4 items-center mb-6">
                        <button class="px-8 py-4 bg-white text-gwm-dark text-sm font-medium tracking-wide hover:bg-gwm-gold hover:text-white transition-colors duration-300">
                            Hero CTA (Light)
                        </button>
                        <div class="bg-gwm-dark p-4 inline-flex gap-4">
                            <button class="px-8 py-4 border border-white/30 text-white text-sm font-medium tracking-wide hover:bg-white hover:text-gwm-dark transition-colors duration-300">
                                Hero CTA (Dark BG)
                            </button>
                        </div>
                    </div>
                    <p class="text-xs text-gwm-charcoal/30 mt-4">Used in hero carousel slides. White bg with gold hover, or ghost variant on dark backgrounds.</p>
                </div>

                <!-- Pull Quote -->
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Pull Quote</h3>
                    <blockquote class="py-10 border-t border-b border-gwm-gray/30">
                        <p class="text-2xl md:text-3xl font-serif text-gwm-dark leading-snug mb-6">
                            "A união da rede de concessionários é o que nos permite oferecer uma experiência verdadeiramente premium."
                        </p>
                        <cite class="not-italic text-xs font-sans font-medium uppercase tracking-widest text-gwm-bronze">
                            Autor da Citação
                        </cite>
                    </blockquote>
                    <code class="text-xs text-gwm-charcoal/30 font-mono block mt-4">blockquote · border-t border-b · font-serif · cite .date-badge style</code>
                </div>

                <!-- Scroll Reveal Animation -->
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Scroll Reveal Animation</h3>
                    <div class="grid grid-cols-3 gap-4 mb-6">
                        <div class="reveal bg-gwm-light p-6 text-center" style="--reveal-delay: 0s">
                            <span class="text-sm text-gwm-charcoal/60 font-sans">Card 1</span>
                            <p class="text-xs text-gwm-charcoal/30 mt-1">0s delay</p>
                        </div>
                        <div class="reveal bg-gwm-light p-6 text-center" style="--reveal-delay: 0.12s">
                            <span class="text-sm text-gwm-charcoal/60 font-sans">Card 2</span>
                            <p class="text-xs text-gwm-charcoal/30 mt-1">0.12s delay</p>
                        </div>
                        <div class="reveal bg-gwm-light p-6 text-center" style="--reveal-delay: 0.24s">
                            <span class="text-sm text-gwm-charcoal/60 font-sans">Card 3</span>
                            <p class="text-xs text-gwm-charcoal/30 mt-1">0.24s delay</p>
                        </div>
                    </div>
                    <div class="space-y-2 text-xs text-gwm-charcoal/30 font-mono">
                        <p>.reveal → opacity: 0, translateY(24px)</p>
                        <p>.reveal.is-visible → opacity: 1, translateY(0)</p>
                        <p>--reveal-delay: stagger via CSS custom property</p>
                        <p>IntersectionObserver (threshold: 0.15, unobserve after trigger)</p>
                    </div>
                    <p class="text-xs text-gwm-charcoal/40 mt-4">Placed outside <code class="font-mono">@@layer</code> to avoid Tailwind v4 utility specificity override.</p>
                </div>

                <!-- Reading Progress Bar -->
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Reading Progress Bar</h3>
                    <div class="relative h-[2px] bg-gwm-gray/20 mb-4">
                        <div class="absolute top-0 left-0 h-full bg-gwm-gold" style="width: 65%"></div>
                    </div>
                    <p class="text-xs text-gwm-charcoal/30 mb-4">Fixed at top of viewport on article detail pages. Tracks scroll position relative to article body.</p>
                    <code class="text-xs text-gwm-charcoal/30 font-mono block">fixed top-0 left-0 z-[60] h-[2px] bg-gwm-gold</code>
                </div>

                <!-- Dividers -->
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Dividers & Separators</h3>
                    <div class="space-y-8">
                        <div>
                            <div class="separator mb-3"></div>
                            <code class="text-xs text-gwm-charcoal/30 font-mono">.separator (gold, 30% opacity)</code>
                        </div>
                        <div>
                            <div class="border-t border-gwm-gray/30 mb-3"></div>
                            <code class="text-xs text-gwm-charcoal/30 font-mono">border-t border-gwm-gray/30</code>
                        </div>
                        <div>
                            <div class="bg-gwm-charcoal p-4">
                                <div class="border-t border-white/10"></div>
                            </div>
                            <code class="text-xs text-gwm-charcoal/30 font-mono mt-3 block">border-t border-white/10 (dark bg)</code>
                        </div>
                    </div>
                </div>

                <!-- Badges & Labels -->
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Badges & Labels</h3>
                    <div class="flex flex-wrap gap-3">
                        <span class="bg-green-100 text-green-800 text-xs font-medium px-3 py-1">Success</span>
                        <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-3 py-1">Warning</span>
                        <span class="bg-red-100 text-red-800 text-xs font-medium px-3 py-1">Error</span>
                        <span class="bg-blue-100 text-blue-800 text-xs font-medium px-3 py-1">Info</span>
                    </div>
                </div>

                <!-- Alerts -->
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Alerts</h3>
                    <div class="space-y-4">
                        <div class="bg-green-50 border-l-2 border-green-500 p-4">
                            <p class="text-sm text-green-700"><strong>Success:</strong> Your changes have been saved.</p>
                        </div>
                        <div class="bg-yellow-50 border-l-2 border-yellow-500 p-4">
                            <p class="text-sm text-yellow-700"><strong>Warning:</strong> Your subscription is about to expire.</p>
                        </div>
                        <div class="bg-red-50 border-l-2 border-red-500 p-4">
                            <p class="text-sm text-red-700"><strong>Error:</strong> Failed to connect to the server.</p>
                        </div>
                    </div>
                </div>

                <!-- Forms -->
                <div class="bg-white p-8 border border-gwm-gray/30">
                    <h3 class="text-xs uppercase tracking-widest text-gwm-charcoal/40 font-sans font-medium mb-8">Forms & Inputs</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-3xl">
                        <div>
                            <label class="block text-sm font-medium text-gwm-charcoal/70 mb-2">Text Input</label>
                            <input type="text" class="w-full border border-gwm-gray/50 px-4 py-3 text-sm focus:border-gwm-charcoal focus:outline-none transition-colors" placeholder="Enter text here...">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gwm-charcoal/70 mb-2">Select</label>
                            <select class="w-full border border-gwm-gray/50 px-4 py-3 text-sm focus:border-gwm-charcoal focus:outline-none transition-colors bg-white">
                                <option>Option 1</option>
                                <option>Option 2</option>
                            </select>
                        </div>
