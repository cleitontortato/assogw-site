@model IEnumerable<assogw.Models.DealershipModel>

@{
    ViewData["Title"] = "Rede de Concessionárias";
}

<!-- Page Header -->
<section class="pt-32 pb-16 bg-white border-b border-gwm-gray/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <span class="date-badge block mb-4">Rede</span>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif text-gwm-dark">@ViewData["Title"]</h1>
    </div>
</section>

<section class="py-16 bg-gwm-light min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        @if (Model.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-px bg-gwm-gray/30" id="dealershipGrid">
                @foreach (var dealer in Model)
                {
                    <div class="bg-white p-8 md:p-10 hover:bg-gwm-light transition-colors duration-200">
                        <h3 class="text-xl font-serif text-gwm-dark mb-2">@dealer.Name</h3>
                        <p class="text-sm text-gwm-charcoal/50">@dealer.City / @dealer.State</p>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4" role="alert">
                <div class="flex">
                    <div class="shrink-0">
                        <i class="fas fa-exclamation-triangle text-yellow-400"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-yellow-700">
                            @ViewData["Error"] ?? "Nenhuma concessionária encontrada."
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
