{
  "name": "assogw-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "css:build": "tailwindcss -i ./wwwroot/css/input.css -o ./wwwroot/css/output.css --minify",
    "css:watch": "tailwindcss -i ./wwwroot/css/input.css -o ./wwwroot/css/output.css --watch",
    "dotnet:watch": "dotnet watch run",
    "start": "concurrently -n tw,dotnet -c blue,green \"npm run css:watch\" \"npm run dotnet:watch\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.18"
  }
}
